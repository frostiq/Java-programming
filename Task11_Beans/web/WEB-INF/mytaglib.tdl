<taglib>
    <tlib-version>1.0</tlib-version>
    <jsp-version>2.0</jsp-version>
    <short-name>My taglib</short-name>
    <tag>
        <name>bundle</name>
        <tag-class>by.bazhanau.task11.Tags.BundleTag</tag-class>
        <body-content>JSP</body-content>
        <attribute>
            <name>root</name>
            <required>true</required>
        </attribute>
    </tag>
    <tag>
        <name>scripts</name>
        <tag-class>by.bazhanau.task11.Tags.ScriptsTag</tag-class>
        <body-content>scriptless</body-content>
    </tag>
    <tag>
        <name>styles</name>
        <tag-class>by.bazhanau.task11.Tags.StylesTag</tag-class>
        <body-content>scriptless</body-content>
    </tag>
</taglib>